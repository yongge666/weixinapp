
<!--searchIndex.wxml-->
<view class="search">
  <input class="search-input" bindinput="getSearchWords" bindfocus="focus" bindblur="blur" placeholder="搜索关键词" />
  <image bindtap="doSearch" data-inputValue="{{inputValue}}" class="search-icon" src="http://ser3.graphmovie.com/appweb/weiapi/application/views/index/img/icon_search.png" mode="aspectFill" />
</view>
<view class="search-cancel" bindtap="goIndex">取消</view>
<view class="{{display}}">
  <view class="title">热门搜索</view>
  <view class="tag-container">
    <block wx:for="{{hotSearch}}" wx:key="id" wx:for-index="i">
      <view class="tag-btn">{{item}}</view>
    </block>
    <view class="tag-btn">单身狗必看</view>
    <view class="tag-btn">逗比</view>
    <view class="tag-btn">经典</view>
    <view class="tag-btn">热门标签c</view>
    <view class="tag-btn">热门标签c</view>
    <view class="tag-btn">经典</view>
  </view>
</view>
<view class="list">
  <view class="item">
    <image src="http://avatar.graphmovie.com/boo/movies/12042/12042_20161230152256_b.jpg" mode="aspectFill" />
  </view>
</view>