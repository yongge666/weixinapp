
<!--swiper.wxml-->
<view class="head-img" data-id="{{detail.id}}" data-title="{{detail.name}}" data-image="{{detail.bpic}}" bindtap="goPlay">
  <image src="{{detail.bpic}}" mode="aspectFill" />
</view>
<view class="line"></view>
<view class="content">
  <view class="title">{{detail.name}}</view>
  <view class="sub-title">{{detail.subtitle}}</view>
  <view class="desc">{{detail.desc}}</view>
  <view class="hr"></view>
  <view class="dline">
    <view class="stitle">导演:</view>
    <view class="swords">{{detail.director}}</view>
    <view class="clear"></view>
  </view>
  <view class="dline">
    <view class="stitle">主演:</view>
    <view class="swords">{{detail.actor}}</view>
    <view class="clear"></view>
  </view>
  <view class="dline">
    <view class="stitle">类型:</view>
    <view class="swords">{{detail.genre}}</view>
    <view class="clear"></view>
  </view>
  <view class="dline">
    <view class="stitle">上映时间:</view>
    <view class="swords">{{detail.release_date}}</view>
    <view class="clear"></view>
  </view>
  <view class="dline">
    <view class="stitle">豆瓣评分:</view>
    <view class="swords">{{detail.db_score}}</view>
    <view class="clear"></view>
  </view>
  <view class="intro">
    <view class="intro-title">剧情简介:</view>
    <view class="intro-words">{{detail.intro}}</view>
    <view class="clear"></view>
  </view>
</view>
<view class="line"></view>
<view class="author">
  <view class="author-left">
    <image src="{{detail.author.avatar}}" mode="aspectFill" />
  </view>
  <view class="author-right">
    <view class="username">{{detail.author.name}}</view>
    <view class="total">{{detail.author.stat_works}}部作品 {{detail.author.stat_fans}}粉丝</view>
  </view>
  <view class="line2"></view>
</view>
