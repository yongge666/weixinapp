/**swiper.wxss**/
page{
  font-family:"PingFangSC-Regular",'微软雅黑',"Microsoft YaHei" ! important; 
}
view{
  box-sizing: border-box;
}
image{
  max-width: 100%;
  display: block;
}
.top{
  width: 100%;
  position: relative;
}
.top image{
  width: 100%;
  height: 450rpx;
}

.info{
  width: 90%;
  position: absolute;
  top: 326rpx;
  left: 26rpx;
  font-size: 24rpx;
  color: #fff;
}
.content{
  width: 100%;
  position: relative;
}
.item{
  width: 100%;
  height: 250rpx;
  margin-top: 20rpx;
}

.left{
  width: 20%;
  display: inline-block;
  position: relative;
}
.left image{
  width: 90rpx;
  height: 40rpx;
  position: absolute;
  top:96rpx;
  left:20rpx;

}
.center{
  width: 30%;
  display: inline-block;
  position: relative;
}
.center image{
  width: 320rpx;
  height:230rpx;
  position: absolute;
  top: 0;
  left: 0;

}
.right{
  width: 50%;
  display: inline-block;
  position: relative;
}
.right-text{
 width: 100%;
 position: absolute;
 top: 75rpx;
 left: 18rpx;
}
.title{
  font-weight: bold;
  color: #282832;
  font-size: 26rpx;
}
.subtitle{
  font-size: 20rpx;
  color: #6E6E78;
}
.user{
  font-size: 26rpx;
  color: #ABAAAF;
}
