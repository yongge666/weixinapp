/**list.wxss**/
page {
  font-family: "PingFangSC-Regular", '微软雅黑', "Microsoft YaHei" !important;
}
image {
  display: inline-block;
  max-width: 100%;
}

.container {
  width: 100%;
  height: auto;
  padding: 30rpx 0;
}

.content {
  width: 100%;
}

.item {
  width: 46%;
  display: inline-block;
  position: relative;
  margin: 0 0 20rpx 20rpx;
  font-size: 20rpx;
}

.header {
  width: 100%;
  padding-left: 5rpx;
  box-sizing: border-box;
  height: 23rpx;
  line-height: 23rpx;
  position: absolute;
  bottom: 93rpx;
  left: 0;
  color: #fdf1f2;
  background: linear-gradient(to bottom, rgba(0,0,0,0.65), rgba(0,0,0,1));
  opacity: 0.6;
  overflow: hidden;
}

.header .user {
  width: 160rpx;
}

.header view {
   height: 23rpx;
  box-sizing: border-box;
  display: inline-block;
  padding-right: 20rpx;
  overflow: hidden;
}

.header image {
  width: 18rpx;
  height: 18rpx;
  display: inline-block;
}

.item-icon {
  width: 23rpx;
  height: 23rpx;
  display: inline-block;
  padding-right: 6rpx;
}

.main-img {
  width: 360rpx;
  height: 258.75rpx;
}

.title {
  width: 100%;
  height: 36rpx;
  line-height: 36rpx;
  overflow: hidden;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #171717;
  font-weight: bold;
}

.intro {
  color: #919191;
}

.type {
  width: 170rpx;
  display: inline-block;
  color: #98989b;
  padding-right: 20%;
}

.score {
  width: 100rpx;
  box-sizing: border-box;
  display: inline-block;
  color: #98989b;
}

.footer {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  overflow: hidden;
  margin-top: 10rpx;
  color: #848484;
  font-size: 24rpx;
  box-sizing: border-box;
}
