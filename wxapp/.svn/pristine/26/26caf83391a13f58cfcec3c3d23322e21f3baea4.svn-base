/**swiper.wxss**/
page{
  font-family:"PingFangSC-Regular",'微软雅黑',"Microsoft YaHei" ! important;
  font-size: 16rpx;
}
image{
  max-width: 100%;
  display: block;
}
.head-img{
  width: 100%;
  height: 50%;
}
.head-img image{
  width: 100%;
}
.line{
  height: 20rpx;
  background-color: #efefef;
}
.title{
  margin: 20rpx 0 0 20rpx;
  font-size: 36rpx;
  color: #282832;
}
.sub-title{
  margin: 20rpx 0 0 20rpx;
  font-size: 32rpx;
  color: #98989b;
}
.desc{
  width: 94%;
  line-height: 48rpx;
  margin: 20rpx 20rpx 0 20rpx;
  color: #98989b;
  font-size: 30rpx;
}
.hr{
  width: 96%;
  height: 1rpx;
  margin: 30rpx  auto 31rpx auto;
  background-color:#e4e4e2;
}

.dline{
  width: 80%;
  margin: 0 0 20rpx 20rpx;
}
.stitle{
  float: left;
  color: #585859;
  font-size: 32rpx;
}
.swords{
   float: left;
   color: #98989b;
   font-size: 32rpx;
}
.clear{
  clear: both;
}

.intro-title{
  width: 80%;
  margin: 30rpx 0 20rpx 20rpx;
  color: #585859;
  font-size: 32rpx;
}
.intro-words{
  width: 94%;
  color: #98989b;
  margin: 20rpx 20rpx 50rpx 20rpx;
  font-size: 32rpx;
}

.author{
  width: 100%;
  position: relative;
}
.author-left{
  width: 10%;
  position: absolute;
  top: 0;
  left: 20rpx;
}

.author-left image{
  width: 70rpx;
  height: 70rpx;
  margin: 35rpx 20rpx 30rpx 0;
  border-radius: 50%;

}
.author-right{
  width: 70%;
  line-height: 40rpx;
  top: 30rpx;
  left: 110rpx;
  position: absolute;
  font-size: 34rpx;
}

.username{
  color: #282832;
}
.total{
  width: 70%;
  color: #98989b;
}
.chr{
  width: 96%;
  height: 6rpx;
  position: absolute;
  top: 192rpx;
  left: 2%;
  background-color:#e4e4e2;
}
.line2{
  height: 20rpx;
  width: 100%;
  background-color: #efefef;
  position: absolute;
  top: 140rpx;
  left: 0;
}

.user{
  width:100%;
  position: relative;
  top: 160rpx;
}
.user-left{
  width: 10%;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}

.user-left image{
  width: 70rpx;
  height: 70rpx;
  margin: 35rpx 20rpx 30rpx 0;
  border-radius: 50%;

}

.hot-title{
  margin: 30rpx 0 0 20rpx;
}

.user-right{
 width: 80%;
  line-height: 40rpx;
  top: 50rpx;
  left: 110rpx;
  position: absolute;
  font-size: 34rpx;
}
.comment-content{
  width: 100%;
  height: 196rpx;
   position: relative;
  /*background-color: red;*/
}
.comment-user{
  color: #282832;
}
.comment-date{
  color: #98989b;
}
.comment{
  color: #282832;
}