/**index.wxss**/
page{
  font-family:"PingFangSC-Regular",'微软雅黑',"Microsoft YaHei" ! important; 
}
.swiper-main{
  width:100%;
  position: relative;
}

.search{
  width: 600rpx;
  height: 54rpx;
  line-height: 54rpx;
  position: absolute;
  top: 14rpx;
  left: 40rpx;
  z-index: 1;
}



.search-input{
   width: 600rpx;
  height: 54rpx;
  line-height: 54rpx;
  position: absolute;
   top: 5rpx;
   left: 40rpx;
  border-radius:20rpx;
  color:#C2CBC6;
  font-size: 30rpx;
   background-color: #ffffff;
  opacity: 0.4;
}
.search-icon{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  top: 12rpx;
  right: -20rpx;
  z-index: 2;
  opacity: 1;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

image{
  display: block;
  max-width: 100%;
}
.line{
  height: 20rpx;
  background-color: #efefef;
}
.index-title{
  box-sizing: border-box;
  height: 100rpx;
  padding-left: 20rpx;
  line-height: 100rpx;
  color: #282832;
   
}
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.pic-wall{
  width: 100%;
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  box-sizing: border-box;
  padding: 0 20rpx 20rpx 8rpx;
}
.imgbox{
   height: 200rpx;
   position: relative;
}
.mask-img{
  height:200rpx;
  line-height: 200rpx;
  color: #ffffff;
  text-align: center;
  position: absolute;
  left: 10rpx;
  top: -10rpx;
  /*border: 1px solid red;*/
  background-color: #000;
  opacity: 0.6;
}
.type-text{
  width: 90%;
  height: 36rpx;
  margin-top: -30rpx;
  font-size: 36rpx;
}
.num-text{
  width: 90%;
  height: 36rpx;
  line-height: 26rpx;
  margin-top: 100rpx;
  font-size: 36rpx;
}
.wall-img-common{
  height: 200rpx;
  padding-left: 7rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
}

.wall-img-first{
   width: 260rpx;
}
.wall-img-last{
   width: 260rpx;
}

.wall-img-normal{
  width: 231rpx;
}

.hot-tag{
  width:100%;
}
.tag-container{
  width: 100%;
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  box-sizing: border-box;
  padding: 0 10rpx 0 10rpx;
}

.tag-btn{
  box-sizing: border-box;
  max-width: 260rpx;
  min-width: 130rpx;
  margin: 15rpx 10rpx 15rpx 10rpx;
  padding: 0 30rpx 0rpx 30rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  border: 1rpx solid #c1c1c1;
  border-radius: 36rpx;
  color: #282832;
}

.selected-movie{
  width: 100%;
}
.selected-container{
  box-sizing: border-box;
  width: 100%;
  padding: 0 20rpx 0 20rpx;
}
item{
  width:100%;
}
.item-img{
  width:100%;
}
.item-title{
  height: 56rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #282832;
  margin-bottom: 10rpx;
  padding: 20rpx 20rpx 0 20rpx;
}
.item-intro{
  height: 44rpx;
  line-height: 44rpx;
  font-size: 25rpx;
  color: #98989b;
  padding: 0 20rpx 0 20rpx;
}
.item-line{
  width: 2rpx;
  height: 4rpx;
  font-size: 50rpx;
  color: #efefef;
  position: absolute;
  left: 34%;
}
.item-footer{
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  border-top: 1rpx solid #efefef;
  margin-top: 20rpx;
  padding: 0 20rpx 0 20rpx;
  position: relative;
}

.item-footer-left{
  box-sizing: border-box;
  width: 30%;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  position: absolute;
  left: 0;
  top:20rpx;
}

.item-footer-right{
  box-sizing: border-box;
  width: 79%;
  height: 44rpx;
  line-height: 44rpx;
  text-align: left;
  position: absolute;
  right: 0;
  top:20rpx;
}

.item-avatar{
  width:40rpx;
  height: 40rpx;
  border-radius: 50%; 
  position: absolute;
  left: 20rpx;
}

.item-icon{
  width: 22rpx;
  height: 21rpx;
  position: absolute;
}
.item-intro-line{
  width: 30%;
  height: 44rpx;
  line-height:44rpx;
   position: absolute;
   font-size: 20rpx;
}
.item-look{
  top: 5rpx;
  left:160rpx;
}
.item-like{
  top: 5rpx;
  left:280rpx;
}
.item-comment{
  top: 5rpx;
  left:380rpx;
}
.item-icon-eye{
  top: 15rpx;
  left:-25rpx;
}
.item-icon-like{
  top: 15rpx;
  left:-25rpx;
}
.item-icon-comment{
  top: 15rpx;
  left:-25rpx;
}

